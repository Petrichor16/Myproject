<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f6f6"
    android:orientation="vertical"
    tools:context="com.ombre.woodhouse.UI.activity.AddressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorGray_4"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/addnewaddress_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="onClick"
            android:src="@mipmap/ic_chevron_left_white_24dp" />

        <TextView
            android:id="@+id/titleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="添加新地址"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorWhite"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edittext_height"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="收货人："
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/consignee"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_edittext_bg"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="16sp" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorGray"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edittext_height"
       android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="联系电话："
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/Contact_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_edittext_bg"
            android:digits="0123456789"
            android:inputType="textPersonName"
            android:maxLength="11"
            android:textSize="16sp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorGray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edittext_height"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="所在地区："
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/login_edittext_bg"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorGray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edittext_height"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="备注："
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/address_remark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.76"
            android:background="@drawable/login_edittext_bg"
            android:ems="10"
            android:maxLength="16"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorGray"/>

    <Button
        android:id="@+id/btn_Preservation"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="15dp"
        android:background="@drawable/btn_login_bg_focused"
        android:scaleType="centerCrop"
        android:text="保存"
        android:onClick="onClick"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" /><!--去掉button按钮的阴影效果-->
</LinearLayout>