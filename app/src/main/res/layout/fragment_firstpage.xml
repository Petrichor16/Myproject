<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#e9e6e6">



    <com.ombre.woodhouse.MyView.AlphaTitleScrollView
        android:id="@+id/firstpage_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_addView"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="265dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/my_sowingmap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/magin_1"
                android:clipChildren="false" />

            <LinearLayout
                android:id="@+id/dotLayout"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">
            </LinearLayout>

        </FrameLayout>

            <FrameLayout
                android:id="@+id/all_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@color/colorWhite">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="211dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon11" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="120dp"
                    android:layout_height="40dp"

                    android:layout_gravity="center|bottom"
                    android:background="#39969494"
                    android:gravity="center"
                    android:layout_marginBottom="30dp"
                    android:text="全部商品 >"
                    android:textColor="@color/colorWhite"
                    android:textSize="15dp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="vertical"
                android:background="@color/colorWhite">

                <FrameLayout
                    android:id="@+id/new_goods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_margin="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon7" />

                    <TextView
                        android:id="@+id/textView210"
                        android:layout_width="120dp"
                        android:layout_height="40dp"

                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="20dp"
                        android:background="#39969494"
                        android:gravity="center"
                        android:text="新品到货 >"
                        android:textColor="@color/colorWhite"
                        android:textSize="15dp" />

                </FrameLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/newComm_Exhibition"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/magin_1"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/hot_goods"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon13"/>

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="20dp"
                        android:background="#39969494"
                        android:gravity="center"
                        android:text="人气单品 >"
                        android:textColor="@color/colorWhite"
                        android:textSize="15dp" />

                </FrameLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/hotComm_Exhibition"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/magin_1"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/Promotion_goods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_margin="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon12" />

                    <TextView
                        android:id="@+id/textView2120"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="20dp"
                        android:background="#39969494"
                        android:gravity="center"
                        android:text="特价促销 >"
                        android:textColor="@color/colorWhite"
                        android:textSize="15dp" />

                </FrameLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/teComm_Exhibition"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/magin_1"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/line" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="你可能喜欢"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorGray" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/maybeLike"
                    android:layout_margin="@dimen/magin_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </com.ombre.woodhouse.MyView.AlphaTitleScrollView>

    <!-- title标题栏-->
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorGray_3"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/scanning_qrCode"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:src="@mipmap/ic_account_balance_black_36dp"
           />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/research_edittext_bg"
            android:layout_marginRight="30dp"
            android:layout_height="37dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                app:srcCompat="@android:drawable/ic_menu_search" />

            <EditText
                android:id="@+id/searchGoods"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/login_edittext_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="搜索"
                android:textSize="17sp"
                android:focusable="false"
                android:cursorVisible="false"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>