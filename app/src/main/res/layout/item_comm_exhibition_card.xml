<?xml version="1.0" encoding="utf-8"?>
<!--商品列表栏展示卡片-->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="#f4f2f2"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:background="@color/generalitem_check_false"
            android:id="@+id/comm_card_exhibition"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comm_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/view_10"
            android:background="@drawable/comm_state_border"
            android:gravity="center"
            android:textSize="@dimen/view_10"
            android:textColor="@color/color_orange" />

        <TextView
            android:id="@+id/comm_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_10"
            android:gravity="center|left"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/comm_card_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_10"
            android:textColor="@color/colorRed"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/sale_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/view_10"
            android:layout_marginLeft="22dp"
            android:text="0" />

    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>