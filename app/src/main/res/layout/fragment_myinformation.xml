<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="1"
    android:background="@color/colorGray"
    android:layout_height="match_parent">

    <com.ombre.woodhouse.MyView.AlphaTitleScrollView
        android:id="@+id/myinfo_scrollview"
        android:layout_width="match_parent"
        android:background="@color/colorGray"
        android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/person_infoColumn"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/icon4">

                <TextView
                    android:id="@+id/btn_ls"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/ls_mode_bg"
                    android:gravity="center"
                    android:text="@string/ls_user_register"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />

                <LinearLayout
                    android:id="@+id/my_infoPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|bottom"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="25dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/icon5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nickname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/user_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/colorWhite"
                            android:textSize="16dp" />
                    </LinearLayout>


                </LinearLayout>


            </FrameLayout>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/myoders"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="我的订单"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部订单"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/Pending_payment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/icon_50"
                android:layout_height="@dimen/icon_50"
                android:src="@mipmap/ic_insert_invitation_black_24dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:text="待付款" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Pending_delivery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/icon_50"
                android:layout_height="@dimen/icon_50"
                android:src="@mipmap/ic_movie_black_36dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:text="待发货" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ReceiveGoods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/icon_50"
                android:layout_height="@dimen/icon_50"
                android:src="@mipmap/ic_airport_shuttle_black_36dp" />

            <TextView
                android:id="@+id/textView10"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="待收货" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Pending_evaluated"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="@dimen/icon_50"
                android:layout_height="@dimen/icon_50"
                android:src="@mipmap/ic_camera_alt_black_36dp" />

            <TextView
                android:id="@+id/textView11"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="待评价" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Return_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="@dimen/icon_50"
                android:layout_height="@dimen/icon_50"
                android:src="@mipmap/ic_ring_volume_black_36dp" />

            <TextView

                android:id="@+id/textView12"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="退/换货" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="0.5dp"
        android:background="@mipmap/icon2">
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"
            app:srcCompat="@mipmap/icon1" />
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="0.5dp"
                android:background="@color/colorWhite">

                <LinearLayout
                    android:id="@+id/myCollection"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/myCollectionNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="@color/colorBlack"
                        android:text="0" />

                    <TextView
                        android:id="@+id/textView13"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品收藏" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/footprint"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/footprintNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="@color/colorBlack"
                        android:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="浏览记录" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/address_manager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/icon_50"
                        android:layout_height="@dimen/icon_50"
                        android:src="@mipmap/ic_art_track_black_36dp" />

                    <TextView
                        android:id="@+id/textView38"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:text="地址管理" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Service_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView22"
                        android:layout_width="@dimen/icon_50"
                        android:layout_height="@dimen/icon_50"
                        android:src="@mipmap/ic_phone_black_36dp" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="服务反馈"
                        android:textColor="@color/colorBlack" />

                </LinearLayout>
                <View
                android:layout_width="match_parent"
                    android:layout_weight="1"
                android:layout_height="match_parent"/>
            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/line"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="为您优选"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorGray"/>

        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/infoHotgoods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

        </LinearLayout>
    </com.ombre.woodhouse.MyView.AlphaTitleScrollView>

    <LinearLayout
        android:id="@+id/person_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorGray_3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/person_setting"
                android:layout_width="@dimen/icon_view"
                android:layout_height="@dimen/icon_view"
                android:layout_gravity="center|end"
                android:layout_marginRight="15dp"
                android:src="@mipmap/ic_settings_white_36dp" />


            <ImageView
                android:id="@+id/my_qrCode"
                android:layout_width="@dimen/icon_view"
                android:layout_height="@dimen/icon_view"
                android:layout_gravity="center|end"
                android:layout_marginRight="15dp"
                android:src="@mipmap/ic_account_balance_black_36dp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>